{
	"compilerOptions": {
	"outDir": "build",
	"rootDir": "src",
	  "target": "esnext",
	  "module": "esnext",
	  "strict": true,
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "baseUrl": ".",
	  "paths": {
		"$lib/*": ["src/lib/*"],
		"$components/*": ["src/components/*"],
		"$routes/*": ["src/routes/*"],
		"$app/*": ["src/app/*"],
		"$models/*": ["src/models/*"]
	  },
	  "allowJs": true,
	  "isolatedModules": true,
	  "resolveJsonModule": true
	},
	"include": ["src/**/*.ts", "src/**/*.svelte"],
	"exclude": ["node_modules/*", "build/* ",     "src/lib/paraglide/*.js"],
	"svelteOptions": {
	  "preprocess": {
		"typescript": {
		  "transpileOnly": true
		}
	  }
	}
  }
  